<% random_ids = random_dom_ids(9) %>

<style>
  .<%= random_ids[2] %> {
    align-items: center;
    align-content: center;
    justify-content: center;
    position: fixed;
    transform: translate(0,0);
    width: auto;
    left: 0;
    right: 0;
    height: auto;
    top: 0;
    bottom: 0;
    z-index: 9991;
    padding: 20px;
    display: flex
  }

  .<%= random_ids[3] %> {
    display: block;
    position: absolute;
    width: auto;
    left: 0;
    right: 0;
    height: auto;
    top: 0;
    bottom: 0;
    z-index: 9995;
    opacity: 0.3;
    background: #222222
  }

  .<%= random_ids[4] %> {
    margin-top: -3%;
    width: 30%;
    min-height: 150px;
    height: auto;
    max-height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
    z-index: 10000;
    background: <%= message.params['color'] %>;
    border: 2px solid #222222;
    padding: 16px
  }

  .<%= random_ids[5] %> {
    position: relative
  }

  .<%= random_ids[6] %> {
    margin: 1px;
    padding: 0;
    line-height: 2
  }

  .<%= random_ids[7] %> {
    position: absolute;
    top: 0;
    right: 0;
    line-height: 0;
    font-size: 3em;
    cursor: pointer;
    color: <%= message.params.fetch('text-color') { 'white' } %>
  }

  .<%= random_ids[8] %> {
    position: relative;
    font-size: 2em;
    padding-top: 20px;
    color: <%= message.params.fetch('text-color') { 'white' } %>
  }

</style>

<div id="<%= random_ids[0] %>" class="<%= random_ids[2] %>">
  <div class="<%= random_ids[3] %>"></div>
  <div class="<%= random_ids[4] %>">
    <div class="<%= random_ids[5] %>">
      <span class="<%= random_ids[6] %>"></span>
      <span id="<%= random_ids[1] %>" class="<%= random_ids[7] %>">
        &times;
      </span>
    </div>
    <span class="<%= random_ids[8] %>">
      <%= message.params['text'] %>
    </span>
  </div>
</div>

<script>
  document.body.style.position = 'fixed'
  document.body.style.overflow = 'auto'

  document.getElementById("<%= random_ids[1] %>").onclick = function() {
    document.getElementById("<%= random_ids[0] %>").style.display = 'none'
    document.body.style.position = 'initial'
    document.body.style.overflow = 'initial'
  }
</script>
