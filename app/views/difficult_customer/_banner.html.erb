<% random_ids = random_dom_ids(5) %>

<style>
  .<%= random_ids[2] %> {
    z-index: 9991;
    position: absolute;
    background: <%= message.params['color'] %>;
    left: 0;
    right: 0;
    top: 0;
    margin: 0;
    padding: 10px;
    color: black
  }

  .<%= random_ids[3] %> {
    position: relative;
    float: left;
    padding: 3px;
    color: <%= message.params.fetch('text-color') { 'black' } %>;
  }

  .<%= random_ids[4] %> {
    position: relative;
    float: right;
    cursor: pointer;
    color: <%= message.params.fetch('text-color') { 'black' } %>;
    line-height: 0;
    padding: 7px;
    font-size: 3em
  }
</style>

<div id="<%= random_ids[0] %>" class="<%= random_ids[2] %>">
  <span class="<%= random_ids[3] %>">
    <%= message.params['text'] %>
  </span>
  <span id="<%= random_ids[1] %>" class="<%= random_ids[4] %>">
    &times;
  </span>
</div>

<script>
  document.getElementById("<%= random_ids[1] %>").onclick = function() {
    document.getElementById("<%= random_ids[0] %>").style.display = 'none'
  }
</script>
