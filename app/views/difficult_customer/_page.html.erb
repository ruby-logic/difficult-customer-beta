<% random_ids = random_dom_ids(6) %>

<style>
  .<%= random_ids[2] %> {
    position: fixed;
    z-index: 10000;
    padding-top: 100px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: <%= message.params['color'] %>
  }

  .<%= random_ids[3] %> {
    font-size: 4em;
    color: white;
    margin: auto;
    padding: 20px;
    width: 80%
  }

  .<%= random_ids[4] %> {
    position: relative;
    float: right;
    cursor: pointer;
    padding: 3px;
    margin-top: -.9em;
    color: <%= message.params.fetch('text-color') { 'white' } %>
  }

  .<%= random_ids[5] %> {
    color: <%= message.params.fetch('text-color') { 'white' } %>
  }
</style>

<div id="<%= random_ids[0] %>" class="<%= random_ids[2] %>">
  <div class="<%= random_ids[3] %>">
    <span id="<%= random_ids[1] %>" class="<%= random_ids[4] %>">
      &times;
    </span>
    <span class="<%= random_ids[5] %>">
      <%= message.params['text'] %>
    </span>
  </div>
</div>

<script>
  document.body.style.position = 'fixed'
  document.body.style.overflow = 'auto'

  document.getElementById("<%= random_ids[1] %>").onclick = function() {
    document.getElementById("<%= random_ids[0] %>").style.display = 'none'
    document.body.style.position = 'initial'
    document.body.style.overflow = 'initial'
  }
</script>
